

<h2 align="center">Title: <%= @review.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
 <% if @review.user %>
 <ul class="listing">
  <div class="row" align="center">
   <div class="col-md-4 col-md-offset-4">
    <li><%= link_to gravatar_for(@review.user), user_path(@review.user) %></li>
    <li class="review-title"><%= link_to @review.user.username, user_path(@review.user) %></li>
    <li><small><%= pluralize(@review.user.reviews.count, "review") if @review.user.reviews %></small></li>
   </div>
  </div>
 </ul> 
 <% end %>
 <h4 class="center description"><strong>Review:</strong></h4>
 <hr>
 <%= simple_format(@review.review) %>
 <div class="article-actions">
 <%= link_to "Edit", edit_review_path(@review), class: "btn btn-xs btn-info" %>
 <%= link_to "Delete", review_path(@review), method: :delete, data: { confirm: "Are you sure you want to delete your review?"}, class: "btn btn-xs btn-info" %>
 <%= link_to "Back", reviews_path, class: "btn btn-xs btn-info" %>
 </div>
</div>

