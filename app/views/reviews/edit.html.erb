<h1>Edit your Review</h1>
<% if @review.errors.any? %>
 <h2>The following errors prevented your review from being saved:</h2>
 <ul>
 <% @review.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
<%= form_for @review do |f| %>
 <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
 </p>
 <p>
  <%= f.label :review %><br>
  <%= f.text_area :review %>
 </p>
 <p>
  <%= f.submit %>
 </p>
<% end %>

<%= link_to 'Back', reviews_path %>